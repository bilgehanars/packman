{
    "name": "bilgehanars/packman",
    "description": "Package Manager by Using Composer Console Application",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2.0",
        "composer/composer": "*"
    },
    "authors": [
        {
            "name": "Bilgehan ARSLAN",
            "email": "mail@bilgehanars.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Bilgehanars\\PackMan\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "PackMan",
            "category": "",
            "icon": {
                "name": "fas fa-terminal",
                "color": "#ffffff",
                "backgroundColor": "#008080"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": false,
                "js": true,
                "jsCommon": false,
                "css": true,
                "locale": true,
                "gitConf": true,
                "githubActions": true,
                "prettier": true,
                "typescript": true,
                "bundlewatch": true,
                "backendTesting": false,
                "editorConfig": true,
                "styleci": true
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
